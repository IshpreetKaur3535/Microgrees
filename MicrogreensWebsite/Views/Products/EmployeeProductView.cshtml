@model IEnumerable<MicrogreensWebsite.Models.Product>

@{
    ViewData["Title"] = "EmployeeProductView";
}



<form asp-action="EmployeeProductView" method="get">
<br></br>
<header>
    <div>
        <h5>
            Search by Specific Farmer: <input type="text" name="farmerSearch" value="" />
                <input type="submit" value="Search" class="btn btn-success text-dark" />
                <input type="submit" value="Sort" class="btn btn-success text-dark" name="CategorySort" />
            <a asp-action="EmployeeProductView">Remove Filter</a>
            
        </h5>
          

    </div>
    </header>
</form>
<div class="row text-dark">
@foreach(var item in Model){
     <div class="col-4">
            <div class="card border-dark mb-3" style="width:300px">
        <img src="@Url.Content(item.ProductImage)" width="300" height="200">
        <div class="card-body">
            <h4 class="card-title">@item.ProductName</h4>
            <p class="card-text">@item.ProductDescription.</p>
            <h5 class="card-body">Category: @item.Category.CategoryName</h5> 
            <h5 class="card-body">Farmer: @item.Farmer.FarmerName</h5>

            <a asp-action="Detail2" asp-route-id="@item.ProductID">
                        <input type="submit" class="btn btn-success text-dark " value="Detail" />
            </a>
     
        </div>
    </div>
    </div>
 }

</div>

